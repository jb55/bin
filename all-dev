#!/usr/bin/env bash

export RUST_SRC_PATH="$(nix-build '<nixpkgs>' --no-out-link -A rustChannels.beta.rust-src)"/lib/rustlib/src/rust/src
export GNUPGHOME=~/.gnupg/trezor
# texlive.combined.scheme-full \

export LIBCLANG_PATH="$(nix-build '<nixpkgs>' --no-out-link -A llvmPackages.libclang)/lib"

exec nix-shell -p \
     llvmPackages.libclang clang stdenv.cc.libc pango gdk_pixbuf \
     asciidoc \
     autoconf \
     autogen \
     automake \
     bison \
     cairo \
     cppcheck \
     elmPackages.elm \
     flex \
     gdb \
     git \
     glfw \
     glib \
     gmp \
     gtk3 \
     haskellEnv \
     imagemagick \
     libappindicator \
     libgit2 \
     libical.{dev,out} \
     librsvg \
     libtool \
     libxml2 \
     mesa_noglu \
     nodejs \
     dotnet-sdk \
     obs-studio \
     openssl.dev \
     pkgconfig \
     rustChannels.beta.clippy-preview \
     rustChannels.beta.rust \
     rustracer \
     stdenv \
     'python3.withPackages (p: with p; [bitcoinlib cheroot sphinx pytest-forked pytest_xdist pytest ephemeral_port_reserve flask flaky flake8 xlib])' \
     qrencode \
     SDL2 \
     sqlite \
     tor \
     valgrind.dev \
     xorg.libX11.{man,dev} \
     xorg.libXft \
     zlib \
     "$@"
