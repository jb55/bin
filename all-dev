     autogen \
     automake \
     bison \
     cairo \
     pkgconfig \
     cppcheck \
     flex \
     gdb \
     git \
     glfw \
     glib \
     gmp \
     gtk3 \
     imagemagick \
     libappindicator \
     libgit2 \
     libical.{dev,out} \
     librsvg \
     libtool \
     libxml2 \
     mesa_noglu \
     nodejs \
     dotnet-sdk \
     obs-studio \
     rocksdb \
     openssl.dev \
     pkgconfig \
     obs-studio \
     'python3.withPackages (p: with p; [bitcoinlib cheroot sphinx pytest-forked pytest_xdist pytest flask flaky flake8 xlib])' \
     qrencode \
     SDL2 \
     sqlite \
     tor \
     valgrind.dev \
